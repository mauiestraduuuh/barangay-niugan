generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  STAFF
  RESIDENT
}

enum CertificateStatus {
  PENDING
  APPROVED
  REJECTED
  CLAIMED     //request status: claimed; document has been claimed
}

enum FeedbackStatus {
  PENDING
  RESOLVED
  IN_PROGRESS
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DemoTag {
  SENIOR_CITIZEN
  INDIGENOUS_PEOPLE
  FOUR_PS_MEMBER
  SLP_BENEFICIARY
  PWD
}

enum ComplaintGroup {
  PEACE
  PETS
  ENVIRONMENT
  ROAD
  INFRASTRUCTURE
  SAFETY
  OTHERS
}

//
// USERS
//
model User {
  user_id    Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  role       Role     @default(RESIDENT)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  residents            Resident[]
  staffs               Staff[]
  certificateApprovals CertificateRequest[]  @relation("ApprovedBy")
  claimedCertificates  CertificateRequest[]  @relation("ClaimedBy")
  digitalIdIssued      DigitalID[]           @relation("IssuedBy")
  demographicAssigned  DemographicTag[]      @relation("AssignedBy")
  announcementsPosted  Announcement[]
  feedbackResponded    Feedback[]            @relation("RespondedBy")
  clearancesIssued     Clearance[]           @relation("ClearanceIssuedBy")
  eventsCreated        Event[]               @relation("EventCreatedBy")
  approvedRequests     RegistrationRequest[] @relation("ApprovedRequests")
  notifications        Notification[]

}

//
// RESIDENTS
//
model Resident {
  resident_id        Int      @id @default(autoincrement())
  user_id            Int
  first_name         String
  last_name          String
  birthdate          DateTime
  gender             String?
  address            String?
  contact_no         String?
  photo_url          String?
  senior_mode        Boolean  @default(false)
  is_head_of_family  Boolean  @default(false)
  head_id            BigInt?
  household_number   String?
  is_renter          Boolean  @default(false)
  is_4ps_member      Boolean  @default(false)
  is_indigenous      Boolean  @default(false)
  is_slp_beneficiary Boolean  @default(false)
  is_pwd             Boolean  @default(false)
  household_id       Int?
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  // Relations
  user                User                 @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  household           Household?           @relation("HouseholdMembers", fields: [household_id], references: [id], onDelete: SetNull)
  headedHousehold     Household?           @relation("HouseholdHeadResident")
  certificateRequests CertificateRequest[]
  digitalIds          DigitalID[]
  demographicTags     DemographicTag[]
  feedbacks           Feedback[]
  clearances          Clearance[]
  registrationCodes   RegistrationCode[]   @relation("ResidentUsedCodes")
}

//
// STAFFS
//
model Staff {
  staff_id           Int      @id @default(autoincrement())
  user_id            Int
  first_name         String
  last_name          String
  birthdate          DateTime
  gender             String?
  address            String?
  contact_no         String?
  photo_url          String?
  senior_mode        Boolean  @default(false)
  is_head_of_family  Boolean  @default(false)
  head_id            BigInt?
  household_number   String?
  is_renter          Boolean  @default(false)
  is_4ps_member      Boolean  @default(false)
  is_indigenous      Boolean  @default(false)
  is_slp_beneficiary Boolean  @default(false)
  is_pwd             Boolean  @default(false)
  household_id       Int?
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  // Relations
  user            User       @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  household       Household? @relation("HouseholdMembersStaff", fields: [household_id], references: [id], onDelete: SetNull)
  headedHousehold Household? @relation("HouseholdHeadStaff")
  digitalId       DigitalID?
}

//
// HOUSEHOLDS
//
model Household {
  id            Int      @id @default(autoincrement()) // ‚Üê this is the household number
  head_resident Int?     @unique
  head_staff    Int?     @unique
  address       String
  created_at    DateTime @default(now())

  headResident  Resident?  @relation("HouseholdHeadResident", fields: [head_resident], references: [resident_id], onDelete: Cascade)
  headStaff     Staff?     @relation("HouseholdHeadStaff", fields: [head_staff], references: [staff_id], onDelete: Cascade)
  members       Resident[] @relation("HouseholdMembers")
  staff_members Staff[]    @relation("HouseholdMembersStaff")
}

//
// CERTIFICATE REQUESTS
//
model CertificateRequest {
  request_id       Int               @id @default(autoincrement())
  resident_id      Int
  certificate_type String
  purpose          String?
  status           CertificateStatus @default(PENDING)
  rejection_reason String?
  approved_by      Int?
  requested_at     DateTime          @default(now())
  approved_at      DateTime?
  file_path        String?
  pickup_date      DateTime?
  pickup_time      String?
  claim_code       String?
  claimed_by       Int?             //admin who set status as claimed
  claimed_at       DateTime?        //when it was claimed

  // Relations
  resident   Resident @relation(fields: [resident_id], references: [resident_id], onDelete: Cascade)
  approvedBy User?    @relation("ApprovedBy", fields: [approved_by], references: [user_id])
  claimedBy  User?    @relation("ClaimedBy", fields: [claimed_by], references: [user_id])
}

//
// DIGITAL IDs
//
model DigitalID {
  id          Int      @id @default(autoincrement())
  resident_id Int?     @unique
  staff_id    Int?     @unique
  id_number   String   @unique
  qr_code     String?
  issued_by   Int
  issued_at   DateTime @default(now())

  // Relations
  resident Resident?      @relation(fields: [resident_id], references: [resident_id], onDelete: Cascade)
  staff    Staff?         @relation(fields: [staff_id], references: [staff_id], onDelete: Cascade)
  issuedBy User           @relation("IssuedBy", fields: [issued_by], references: [user_id])
  tags     DigitalIDTag[]
}

model DigitalIDTag {
  id        Int    @id @default(autoincrement())
  digitalId Int
  tag       String

  digitalID DigitalID @relation(fields: [digitalId], references: [id])
}

//
// DEMOGRAPHIC TAGS
//
model DemographicTag {
  tag_id      Int      @id @default(autoincrement())
  resident_id Int
  tag_type    DemoTag
  assigned_by Int
  assigned_at DateTime @default(now())

  // Relations
  resident   Resident @relation(fields: [resident_id], references: [resident_id], onDelete: Cascade)
  assignedBy User     @relation("AssignedBy", fields: [assigned_by], references: [user_id])
}

//
// ANNOUNCEMENTS
//
model Announcement {
  announcement_id Int      @id @default(autoincrement())
  title           String
  content         String?
  posted_by       Int
  posted_at       DateTime @default(now())
  is_public       Boolean  @default(true)

  // Relations
  postedBy User @relation(fields: [posted_by], references: [user_id])
}

//
// COMPLAINT CATEGORIES (New Model for 31 Bilingual Complaints)
//
model ComplaintCategory {
  category_id  Int            @id @default(autoincrement())
  english_name String         @unique
  tagalog_name String
  group        ComplaintGroup // now required, must be one of the enum
  description  String?
  feedbacks    Feedback[]
}

//
// FEEDBACK 
//
model Feedback {
  feedback_id         Int            @id @default(autoincrement())
  resident_id         Int
  category_id         Int
  proof_file          String?
  status              FeedbackStatus @default(PENDING)
  response            String?
  response_proof_file String?
  responded_by        Int?
  submitted_at        DateTime       @default(now())
  responded_at        DateTime?

  // Relations
  resident    Resident          @relation(fields: [resident_id], references: [resident_id], onDelete: Cascade)
  respondedBy User?             @relation("RespondedBy", fields: [responded_by], references: [user_id])
  category    ComplaintCategory @relation(fields: [category_id], references: [category_id])
}

//
// CLEARANCES
//
model Clearance {
  clearance_id Int               @id @default(autoincrement())
  resident_id  Int
  issued_for   String
  purpose      String?
  status       CertificateStatus @default(PENDING)
  issued_by    Int?
  requested_at DateTime          @default(now())
  issued_at    DateTime?
  file_path    String?

  // Relations
  resident Resident @relation(fields: [resident_id], references: [resident_id], onDelete: Cascade)
  issuer   User?    @relation("ClearanceIssuedBy", fields: [issued_by], references: [user_id])
}

//
// EVENTS
//
model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  location    String?
  event_date  DateTime
  created_by  Int?
  created_at  DateTime @default(now())
  is_public   Boolean  @default(true)

  // Relations
  creator User? @relation("EventCreatedBy", fields: [created_by], references: [user_id])
}

model RegistrationRequest {
  request_id         Int                @id @default(autoincrement())
  first_name         String
  last_name          String
  email              String?            @unique
  contact_no         String
  birthdate          DateTime
  role               Role               @default(RESIDENT)
  gender             String?
  address            String?
  photo_url          String?
  is_head_of_family  Boolean            @default(false)
  head_id            Int?
  household_number   String?
  is_renter          Boolean?           @default(false)
  is_4ps_member      Boolean            @default(false)
  is_indigenous      Boolean            @default(false)
  is_slp_beneficiary Boolean            @default(false)
  is_pwd             Boolean            @default(false)
  is_senior          Boolean            @default(false)
  status             RegistrationStatus @default(PENDING)
  reference_number   String?            @unique  // <--- ADD THIS
  submitted_at       DateTime           @default(now())
  approved_at        DateTime?
  approved_by        Int?

  approvedBy User? @relation("ApprovedRequests", fields: [approved_by], references: [user_id])
}

//
// REGISTRATION CODES
//
model RegistrationCode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  ownerName String
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  usedById Int?
  usedBy   Resident? @relation("ResidentUsedCodes", fields: [usedById], references: [resident_id])
}

//
// NOTIFICATIONS
//
model Notification {
  id         Int      @id @default(autoincrement())
  user_id    Int
  title      String
  message    String
  type       String? // e.g. "announcement", "certificate", "feedback"
  is_read    Boolean  @default(false)
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}
